    <identification>
        <title>Разни</title>
        <author>Йордан Банев</author>
    </identification>
    <defaults>
        <page-layout>
            <paper-size>letter</paper-size>
            <page-margins top_margin="60" bottom_margin="50" left_margin="60" right_margin="60" />
        </page-layout>
        <score-layout>
            <ligatures>true</ligatures>
        </score-layout>
        <styles>
            <para-style name="title" font_family="Fedorovsk Unicode" font_size="30" align="center" space_after="16" />
            <para-style name="h1" font_family="Fedorovsk Unicode" font_size="16" align="center" />
            <para-style name="h2" font_family="Fedorovsk Unicode" font_size="14" align="center" space_after="15" />
            <para-style name="h3" font_family="Fedorovsk Unicode" font_size="16" align="right" space_before="15" />
            <para-style name="h4" font_family="Fedorovsk Unicode" font_size="12" align="right" space_before="10" />
            <para-style name="verse" font_family="Fedorovsk Unicode" font_size="16" align="left" first_line_indent="20" space_after="15" leading="17" space_before="30" />
            <para-style name="header" font_family="Fedorovsk Unicode" font_size="14" align="center" />
            <para-style name="footer" font_family="Fedorovsk Unicode" font_size="14" align="center" />
            <para-style name="centered-martyria" font_family="Fedorovsk Unicode" font_size="14" color="#cf232b" align="center" space_before="12" space_after="12" />
            <score-style font_family="KA Almouzios" font_size="30" align="justify" word_spacing="0" leading="60" />
            <neume-style type="ordinary" color="#000000" />
            <neume-style type="accidental" color="#bb000e" />
            <neume-style type="chronos" color="#bb000e" />
            <neume-style type="martyria" color="#bb000e" />
            <lyric-style font_family="Fedorovsk Unicode" font_size="16" space_before="26" />
            <dropcap-style font_family="Fedorovsk Unicode" font_size="50" right_indent="0" />
        </styles>
    </defaults>